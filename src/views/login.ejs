    <% if (typeof data.Alert.alert !="undefined" ){ %>

        <<%= data.Alert.Script %>>
            Swal.fire({
            title: '<%= data.Alert.alertTitle%>',
                text: '<%= data.Alert.alerMessage%>',
                    icon: '<%= data.Alert.alertIcon%>',
                        showConfirmButton: <%= data.Alert.showConfirmButton %>,
                            timer: <%= data.Alert.time %>
                                }).then(()=> {
                                window.location= '<%=data.Alert.ruta%>'
                                    })
        </<%= data.Alert.Script %>>
        <% } %>
