<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <center>
          <img src="../public/assets/images.png" class="d-block w-20 ImagenC"
          alt="..."> <br><br>
        </center>
      
        <form action="/update/<%= data.IdPersona %>" method="POST">
          
          <div class="form-group">
            <input type="text" name="Documento" value="<%= data.Documento%>" placeholder="Identificacion" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="Nombre" value="<%= data.Nombre%>" placeholder="Nombre completo" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="TipoPersona" value="<%= data.TipoPersona%>" placeholder="TipoPersona" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="TipoProfesor" value="<%= data.TipoProfesor%>" placeholder="TipoProfesor" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Salvar registro
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
