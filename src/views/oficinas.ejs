<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover  table table-dark">
        <thead>
          <tr>
            <td>Consecutivo</td>
            <td>codigo Oficina</td>
            <td>Persona asociada</td>
            <td>Area</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (ofi) { %>
            <% for(var i = 0; i < ofi.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= ofi[i].CodOficina %></td>
                <td><%= ofi[i].NombrePersona %></td>
                <td><%= ofi[i].AreaO %></td>
                <td>
                  <a href="/update_ofi/<%= ofi[i].IdOficina %>" class="btn btn-info"> <i class="fas fa-user-edit "style="width: 100%;"></i></a>
                  <a href="/delete_ofi/<%= ofi[i].IdOficina %>" class="btn btn-danger"><i class="fas fa-trash-alt"style="width: 100%;"></i></a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/add_ofi" method="POST">
          <div class="form-group">
            <input type="text" name="CodOficina" placeholder="Codigo de oficina" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="NombrePersona" placeholder="Persona al que pertenece" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <span class="symbol-input100">
              <i class="fas fa-building"></i>
            </span>
            <select name="AreaO" >
                <option value="0">Asignacion de Areas</option>
                <%for (var i = 0; i < areaa.length; i++) {%>
                    <option value="<%= areaa[i].NombreArea %>"><%= areaa[i].NombreArea %></option>
                <% } %>
            </select>
          </div>
          <button  type="submit" class="btn btn-primary">
            Registrar Oficina
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
